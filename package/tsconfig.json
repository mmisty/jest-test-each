{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2015"],
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./dist",
    "target": "es2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["src/tests/**/*"]
}
